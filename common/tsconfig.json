{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "ES2020",
    "moduleResolution": "Bundler",
    "target": "ESNext",
    "declaration": true,
    "sourceMap": true,
    "composite": true,
    "jsx": "react",
    "paths": {
      "*": ["*", "node_modules/*"]
    },
    "esModuleInterop": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "lib": ["ES2019", "DOM"]
  },
  "include": ["*", "./morphisms/**/*"],
  "exclude": ["dist/"]
}
