{
  "compilerOptions": {
    "outDir": "./dist", // Output directory for compiled JS files
    "module": "NodeNext", // Use CommonJS modules for Node.js
    "target": "es2022",
    "declaration": true, // Generate declaration files
    "sourceMap": true, // Generate source maps
    "composite": true, // Enable project references,
    "jsx": "react",
    "strict": true,
    "paths": {
      "*": ["*", "node_modules/*"]
    },
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "lib": ["ES2022", "DOM"]
  },
  "include": [
    "*",
    "./analytics/**/*",
    "./api/*",
    "./apiPyserver/*",
    "./csv-security/*",
    "./csv-validation/*",
    "./evaluations/**/*",
    "./firebase/*",
    "./functional-utils/*",
    "./logger/*",
    "./morphisms/**/*",
    "./permissions/*",
    "./prompts/*",
    "./schema/*",
    "./types/*",
    "./utils/*"
  ],
  "exclude": ["dist/", "**/*/*.test.*"]
}
