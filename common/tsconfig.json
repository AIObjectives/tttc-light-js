{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ES2024",
    "declaration": true,
    "sourceMap": true,
    "composite": true,
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "lib": ["ES2024", "DOM"]
  },
  "include": [
    "*",
    "./analytics/**/*",
    "./api/*",
    "./apiPyserver/*",
    "./csv-security/*",
    "./csv-validation/*",
    "./errors/*",
    "./evaluations/**/*",
    "./feature-flags/**/*",
    "./firebase/*",
    "./functional-utils/*",
    "./logger/*",
    "./morphisms/**/*",
    "./permissions/*",
    "./prompts/*",
    "./schema/*",
    "./types/*",
    "./utils/*",
    "./test-utils/**/*"
  ],
  "exclude": ["dist/", "**/*/*.test.*", "vitest.config.ts"]
}
