{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "NodeNext",
    "target": "es6",
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "common/*": ["../common/*"]
    },
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "nodenext",
    "typeRoots": ["./node_modules/@types"],
    "skipLibCheck": true
  },
  "include": ["./src"],
  "references": [{ "path": "../common" }]
}
